<UserControl x:Class="FileRenamer.Files.FileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileRenamer.Files"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="800">
    <Grid>
        <Image Source="{Binding Icon, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="24"/>
        <TextBlock Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="28 0 0 0"/>
    </Grid>
</UserControl>
